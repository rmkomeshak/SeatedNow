@model SeatedNow.Models.UserAccount

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid body-content sn-image sn1 faded" style="color: #fff;">
    <div class="container" style="padding-top: 150px; padding-bottom: 150px;">
        <div class="col-lg-12">
            <h2 style="text-align: center; margin-bottom: 20px;" class="display-4">Sign into your account.</h2>
            <p style="text-align: center; margin-bottom: 50px;">Don't have an account? <a asp-area="" asp-controller="Account" asp-action="Register" style="font-weight: 700; margin-left: 3px;">Sign up today.</a></p>
        </div>
        <div style="max-width: 600px; margin: 0 auto; padding-right: 50px;">
            <form asp-controller="Account" asp-action="LoginUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Email" class="control-label col-sm-3 col-form-label">Email</label>
                    <div class="col-sm-9">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="control-label col-sm-3 col-form-label">Password</label>
                    <div class="col-sm-9">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row" style="margin-top: 50px;">
                    <div class="col-sm-10 offset-2">
                        <input type="submit" value="Sign In" class="btn btn-sn float-right" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
