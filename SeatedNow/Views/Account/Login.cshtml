@model SeatedNow.Models.CustomerLoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid body-content sn-image sn1 fade80" style="color: #fff;">
    <div class="container" style="padding-top: 150px; padding-bottom: 150px;">
        <div class="col-lg-12">
            <h2 style="text-align: center; margin-bottom: 20px;" class="display-4">Sign into your account.</h2>
            <p style="text-align: center; margin-bottom: 50px;">Don't have an account? <a asp-area="" asp-controller="Account" asp-action="Register" style="font-weight: 700; margin-left: 3px;">Sign up today.</a></p>
            @if (!String.IsNullOrEmpty(ViewBag.Register))
            {
                <center><p class="text-success">Success! You can now login with your newly created account</p></center>
            }
        </div>
        <div style="max-width: 600px; margin: 0 auto; padding-right: 50px;">
            <form asp-controller="Account" asp-action="LoginUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Email" class="control-label col-sm-3 col-form-label">Email</label>
                    <div class="col-sm-9">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="control-label col-sm-3 col-form-label">Password</label>
                    <div class="col-sm-9">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger">@Html.ValidationMessage("InvalidCredentials")</span>
                    </div>
                    <div class="col-sm-9 offset-3" style="margin-top: 10px; text-align: right; font-style: italic; font-weight: 700; font-size: 14px;">
                        <a href="#" style="color: #888;" data-toggle="modal" data-target="#ForgotPassword">Forgot your password?</a>
                    </div>
                </div>
                <div class="form-group row" style="margin-top: 50px;">
                    <div class="col-sm-10 offset-2">
                        <input type="submit" value="Sign In" class="btn btn-sn float-right" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="ForgotPassword" tabindex="-1" role="dialog" aria-labelledby="ForgotPassword" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ForgotPasswordTitle">Forgot your password?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Please enter your email address below and we'll send you a link to reset your password.</p>
                <input class="form-control white-bg" placeholder="Email" />
                <span class="text-danger"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-sn">Enter</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
