@model Restaurant

@{
    ViewData["Title"] = "Listing";
}

<div class="container-fluid" style="background: #5d7337; padding-top: 80px; padding-bottom: 70px;">
    <div class="container text-center">
        <h1 id="restaurant-title" style="font-size: 50px; margin-bottom: 10px; color: #fff;">@Model.Name</h1>
        @foreach (var tag in Model.Tags)
        {
            <button id="restauraunt-keyword-1" type="button" class="btn btn-outline-light" style="margin: 5px;">@tag</button>
        }
        
    </div>
</div>
<div class="container">
    <div class="row justify-content-lg-center" style="padding-top: 50px; padding-bottom: 50px;">
        <div class="col-lg-8">
            <p id="restaurant-description" style="text-align: justify; margin-bottom: 40px;">@Model.Description</p>
            <div class="row" style="background: #dddddd; padding: 30px 20px; border-radius: 5px; box-shadow: inset 0 0 5px rgba(0,0,0,0.2)">
                <div class="col-lg-6 align-self-center text-left">
                    <h4 class="display-4" style="margin: 0; font-size: 20px;">Ready to get started?</h4>
                </div>
                <div class="col-lg-6 align-self-center text-right">
                    <button type="button" class="btn btn-danger">Reserve My Seat</button>
                </div>
            </div>
            <div class="row" style="margin-top: 50px;">
                <div class="col-lg-4 text-center">
                    <img id="restaurant-logo" src="~/images/restaurants/@Model.ImagePath" style="max-width: 100%; max-height: 180px;"/>
                </div>
                <div class="col-lg-7 offset-1" id="restaurant-info">
                    @if(Model.Stats.TotalRatings > 0)
                    {
                        <p><i class="fas fa-star" style="color: #ffc107"></i><span id="restaurant-rating"><b>@Model.Stats.Rating stars</b> based on @Model.Stats.TotalRatings reviews</span></p>
                    } else
                    {
                        <p><i class="fas fa-star" style="color: #ffc107"></i><span id="restaurant-rating"><b>No Reviews</b></span></p>
                    }
                    <p><i class="fas fa-utensils"></i><span id="restaurant-menu">
                        <a href="https://www.google.com/" target="_blank"><b>View Menu</b></a></span></p>
                    <p><i class="fas fa-credit-card"></i><span id="restaurant-prices">$30 and under per person</span></p>
                    <p><i class="fas fa-map-marker-alt"></i><span id="restaurant-location">@Model.Address, @Model.City, @Model.State @Model.ZipCode </span></p>
                    <p><i class="fas fa-phone"></i><span id="restaurant-phone">+1 @Model.PhoneNumber</span></p>
                    <p><i class="fas fa-external-link-square-alt"></i><span id="restaurant-site">
                        <a href="https://www.google.com/" target="_blank">https://www.google.com/</a></span></p>
                    <p><i class="fas fa-clock"></i><span id="restaurant-hours">
                            <b>Sunday:</b> 10am - 9pm <br />
                            <b>Monday:</b> 9am - 9pm <br />
                            <b>Tuesday:</b> 9am - 9pm <br />
                            <b>Wednesday:</b> 9am - 9pm <br />
                            <b>Thursday:</b> 9am - 9pm <br />
                            <b>Friday:</b> 9am - 10pm <br />
                            <b>Saturday:</b> 9am - 10pm <br />
                        </span></p>
                </div>
            </div>
        </div>
    </div>
</div>